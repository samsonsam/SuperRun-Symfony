<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Supero{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap.min.css', 'bootstrap') }}">
        <link rel="stylesheet" href="{{ asset('bootstrap-theme.min.css', 'bootstrap') }}">
        <link rel="stylesheet" href="{{ asset('all.css', 'fontawesome') }}">
    {% endblock %}
</head>
<body>
{% block navbar %}
    <nav class="navbar navbar-toggleable-md bg-faded navbar-light">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="{{ path('index') }}"><b style="color: darkred;">SuperRun</b></a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link {% if pagetitle == 'Überblick' %} active {% endif %}"
                       href="{{ path('overview') }}">Übersicht</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if pagetitle == 'Detailansicht' %} active {% endif %}"
                       href="{{ path('detail_view') }}">Detailansicht</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if pagetitle == 'Neuer Eintrag' %} active {% endif %}"
                       href="{{ path('input') }}">Neuer Eintrag</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>